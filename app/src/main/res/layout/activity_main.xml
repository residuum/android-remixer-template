<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="residuum.org.remixer.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Honig - Orgon"
        android:textSize="30sp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New random samples"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:layout_below="@+id/textView"
        android:textSize="20sp"
        android:layout_marginTop="76dp"
        android:id="@+id/pitchbartext" />
    <residuum.org.remixer.widgets.LogSeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pitchbar"
        android:layout_below="@+id/pitchbartext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginLeft="10dp"
        android:id="@+id/pitchvalue"
        android:layout_above="@+id/pitchbar"
        android:layout_toRightOf="@+id/pitchbartext"
        android:layout_toEndOf="@+id/pitchbartext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:layout_below="@+id/pitchbar"
        android:textSize="20sp"
        android:layout_marginTop="76dp"
        android:id="@+id/speedbartext" />
    <residuum.org.remixer.widgets.LogSeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedbar"
        android:layout_below="@+id/speedbartext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginLeft="10dp"
        android:id="@+id/speedvalue"
        android:layout_above="@+id/speedbar"
        android:layout_toRightOf="@+id/speedbartext"
        android:layout_toEndOf="@+id/speedbartext" />
</RelativeLayout>
